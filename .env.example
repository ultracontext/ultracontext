# Shared env file for daemon + TUI (monorepo root).
ULTRACONTEXT_API_KEY=uc_live_xxx
ULTRACONTEXT_BASE_URL=https://api.ultracontext.ai
DAEMON_ENGINEER_ID=engineer-01
DAEMON_HOST=
DAEMON_POLL_MS=1500
DAEMON_LOG_LEVEL=info
DAEMON_VERBOSE=false
DAEMON_LOG_APPENDS=true
TUI_REFRESH_MS=1200
TUI_RECENT_LIMIT=10
ULTRACONTEXT_CONFIG_FILE=~/.ultracontext/config.json
ULTRACONTEXT_DB_FILE=~/.ultracontext/daemon.db
ULTRACONTEXT_LOCK_FILE=~/.ultracontext/daemon.lock
ULTRACONTEXT_DAEMON_WS_HOST=127.0.0.1
ULTRACONTEXT_DAEMON_WS_PORT=0
ULTRACONTEXT_DAEMON_INFO_FILE=~/.ultracontext/daemon.info
ULTRACONTEXT_DAEMON_LOG_FILE=~/.ultracontext/daemon.log
DAEMON_BOOTSTRAP_MODE=prompt
DAEMON_BOOTSTRAP_RESET=false

# Source toggles
INGEST_CODEX=true
INGEST_CLAUDE=true
INGEST_OPENCLAW=true

# Glob patterns
CODEX_GLOB=~/.codex/sessions/**/*.jsonl
CLAUDE_GLOB=~/.claude/projects/**/*.jsonl
OPENCLAW_GLOB=~/.openclaw/agents/*/sessions/**/*.jsonl
CLAUDE_INCLUDE_SUBAGENTS=false

# Resume workflow (pull sessions from UltraContext)
RESUME_CONTEXT_LIMIT=200
RESUME_SOURCE_FILTER=all
RESUME_OPEN_TAB=true
RESUME_SUMMARY_TAIL=14
RESUME_OUTPUT_DIR=~/.codex/resume
