{
    "$schema": "https://mintlify.com/docs.json",
    "theme": "almond",
    "name": "UltraContext",
    "description": "Context infrastructure for AI agents. Store, version, and retrieve conversation history.",
    "colors": {
        "primary": "#000000",
        "light": "#ffffff",
        "dark": "#292929"
    },
    "appearance": {
        "default": "dark"
    },
    "favicon": "/favicon.svg",
    "navigation": {
        "anchors": [
            {
                "anchor": "Documentation",
                "icon": "book-open-cover",
                "groups": [
                    {
                        "group": "Context API",
                        "pages": [
                            "index",
                            {
                                "group": "Quickstart",
                                "pages": ["quickstart/nodejs", "quickstart/python"]
                            },
                            {
                                "group": "Fundamentals",
                                "pages": [
                                    "guides/store-retrieve-contexts",
                                    "guides/edit-contexts",
                                    "guides/view-context-history",
                                    "guides/fork-clone-contexts"
                                ]
                            },
                            {
                                "group": "Advanced",
                                "pages": ["guides/self-hosting"]
                            }
                        ]
                    },
                    {
                        "group": "Context Hub",
                        "pages": ["context-hub/introduction", "context-hub/quickstart", "context-hub/configuration"]
                    }
                ]
            },
            {
                "anchor": "API Reference",
                "icon": "square-terminal",
                "openapi": "/api-reference/openapi.json",
                "groups": [
                    {
                        "group": "API Reference",
                        "pages": ["api-reference/introduction", "api-reference/authentication", "api-reference/errors"]
                    },
                    {
                        "group": "Contexts",
                        "pages": [
                            "POST /contexts",
                            "GET /contexts",
                            "GET /contexts/{id}",
                            "POST /contexts/{id}",
                            "PATCH /contexts/{id}",
                            "DELETE /contexts/{id}"
                        ]
                    }
                ]
            },
            {
                "anchor": "Changelog",
                "icon": "clock-rotate-left",
                "href": "https://ultracontext.ai/changelog"
            }
        ]
    },
    "logo": {
        "light": "/logo/light.svg",
        "dark": "/logo/dark.svg",
        "href": "https://ultracontext.ai"
    },
    "navbar": {
        "primary": {
            "type": "button",
            "label": "Get Started",
            "href": "https://ultracontext.ai"
        }
    },
    "contextual": {
        "options": ["copy", "view", "chatgpt", "claude", "cursor"]
    },
    "footer": {
        "socials": {
            "x": "https://x.com/ultracontext",
            "github": "https://github.com/ultracontext"
        }
    }
}
